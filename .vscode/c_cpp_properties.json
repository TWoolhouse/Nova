{
	"configurations": [
		{
			"name": "Nova - Vulkan MSVC",
			"defines": [
				"UNICODE",
				"_UNICODE",
				"_DEBUG",
				"DEBUG",

				"NOVA_ABYSS_VULKAN",
				"NOVA_MLB_GLM",
				"NOVA_EXPORT"
			],
			"includePath": [
				"${workspaceFolder}/Nova",
				"${env:VULKAN_SDK}/Include",
				"${workspaceFolder}/vendor/glm/include"
			],
			"cStandard": "c17",
			"cppStandard": "c++20",
			"compilerPath": "${default}",
			"intelliSenseMode": "windows-msvc-x64"
		}
	],
	"version": 4
}
