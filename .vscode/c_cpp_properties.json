{
    "configurations": [
        {
            "name": "Nova - Vulkan MSVC",
            "defines": [
                "UNICODE",
                "_UNICODE",
                "_DEBUG",
                "DEBUG",
                "NOVA_BUILD_SELF",
                "NOVA_BUILD_OPTIMISE_DEBUG",
                "NOVA_BUILD_LINK_STATIC",
                "NOVA_ABYSS_VULKAN",
                "NOVA_MLB_GLM",
                "NOVA_WINDOW_NATIVE"
            ],
            "includePath": [
                "${workspaceFolder}/Nova",
                "${env:VULKAN_SDK}/Include",
                "${workspaceFolder}/vendor/glm/",
                "${workspaceFolder}/vendor/googletest/googletest/include/"
            ],
            "cStandard": "c17",
            "cppStandard": "c++20",
            "compilerPath": "${default}",
            "intelliSenseMode": "windows-msvc-x64"
        }
    ],
    "version": 4
}
