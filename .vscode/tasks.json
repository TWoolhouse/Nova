			},
			"dependsOn": [
				"Build Engine",
			],
			"type": "shell",
			"command": "${workspaceFolder}/tools/build.bat",
			"group": "build",
			"presentation": {
				"reveal": "silent",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false
			},
			"problemMatcher": [
