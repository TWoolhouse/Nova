{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "VS2022-Premake",
			"command": "premake5",
			"args": [
				"--file=${workspaceFolder}/premake.lua",
				"vs2022"
			],
			"type": "process",
			"presentation": {
				"reveal": "always"
			},
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "VS2022-Build",
			"type": "shell",
			"command": "msbuild",
			"args": [
				"/m",
				"/consoleloggerparameters:NoSummary",
				"project/vs2022/Nova.sln"
			],
			"group": "build",
			"presentation": {
				"reveal": "always"
			},
			"problemMatcher": "$msCompile"
		}, {
			"label": "Python Single Header",
			"type": "shell",
			"command": "python",
			"args": [
				"${workspaceFolder}/premake/include.py",
				"Nova/nova.h",
				"nova_single.h"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": "build"
		}, {
			"label": "VS2022-Compile",
			"dependsOn" : [
				"Python Single Header",
				"VS2022-Premake",
				"VS2022-Build"
			],
			"dependsOrder": "sequence",
			"group": "build",
		}
	]
}
