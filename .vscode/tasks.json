{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Engine",
			"detail": "Compile Nova Engine (Windows)",
			"args": [
				"nova",
				"dll",
			],
			"options": {
				"cwd": "${workspaceFolder}/Nova"
			},
			"type": "shell",
			"command": "${workspaceFolder}/tools/build.bat",
			"group": "build",
			"presentation": {
				"reveal": "silent",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false
			},
			"problemMatcher": [
				"$msCompile",
				{
					"owner": "cpp",
					"pattern": {
						"regexp": "^(.*)\\((\\d+)\\)\\s*:\\s+(error|warning|fatal error)\\s+(\\w+\\s*:\\s+.*)$",
						"file": 1,
						"line": 2,
						"severity": 3,
						"message": 4
					},
					"background": {
						"activeOnStart": true
					},
					"fileLocation": "autoDetect",
					"source": "cpp"
				}
			]
		}, {
			"label": "Build Flask",
			"detail": "Compile Flask TestBed (Windows)",
